<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black6" />
            <corners android:radius="@dimen/dropdown_bg_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/dropdown_bg_bottom"
        android:left="@dimen/dropdown_bg_left"
        android:right="@dimen/dropdown_bg_right"
        android:top="@dimen/dropdown_bg_top">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/dropdown_bg_corner_radius" />

        </shape>
    </item>

</layer-list>

