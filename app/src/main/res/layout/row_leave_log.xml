<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="12dp">

    <TextView
        android:id="@+id/leaveType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="4dp"
        android:text="Casual Leave"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalLeaves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="10"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/currentStatus"
        app:layout_constraintStart_toEndOf="@id/leaveType"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="18dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/currentStatus"
        app:layout_constraintStart_toEndOf="@id/leaveType"
        app:layout_constraintTop_toBottomOf="@id/totalLeaves" />

    <TextView
        android:id="@+id/sDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="22-aug-2018"
        android:textColor="@color/black2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaveType" />

    <TextView
        android:id="@+id/hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/sDate"
        app:layout_constraintTop_toBottomOf="@id/leaveType" />

    <TextView
        android:id="@+id/eDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:text="25-aug-2018"
        android:textColor="@color/black2"
        app:layout_constraintStart_toEndOf="@id/hyphen"
        app:layout_constraintTop_toBottomOf="@id/leaveType" />

    <TextView
        android:id="@+id/currentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@drawable/round_corner_red_bg"
        android:drawableLeft="@drawable/questionmark_in_circle"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/time_sm"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:padding="4dp"
        android:text="pending"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="m" />
    <!--approved:tickmark_in_circle
    rejected :cross_in_circle
    pending:questionmark_in_circle-->
