<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.jeannypr.scientificstudy.Dashboard.model.HomeTabItemDetail" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/socialLinksSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple13"
        android:padding="12dp">

        <ImageView
            android:id="@+id/shareIc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/default_cont_desc"
            android:src="@drawable/share_ic"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/shareLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="6dp"
            android:text="@string/shareLink"
            android:textColor="@color/black9"
            android:textSize="@dimen/md_size_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shareIc"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="m" />

        <ImageView
            android:id="@+id/fbIc"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/default_cont_desc"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/facebook_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shareIc"
            tools:targetApi="m" />

        <ImageView
            android:id="@+id/youtubeIc"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/default_cont_desc"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/youtube_ic"
            app:layout_constraintStart_toEndOf="@+id/fbIc"
            app:layout_constraintTop_toBottomOf="@id/shareIc"
            tools:targetApi="m" />

        <ImageView
            android:id="@+id/galleryIc"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/default_cont_desc"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/gallery_ic3"
            app:layout_constraintStart_toEndOf="@+id/youtubeIc"
            app:layout_constraintTop_toBottomOf="@id/shareIc"
            tools:targetApi="m" />

