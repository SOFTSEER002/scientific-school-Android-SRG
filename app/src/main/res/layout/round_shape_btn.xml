<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_height"
    android:layout_marginTop="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtSchoolKey"
    tools:targetApi="m">

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/login_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/enterSchoolcodeBtn"
        android:textColor="@color/white"
        android:textSize="@dimen/md_size_text"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/vGuideline90"
        app:layout_constraintStart_toStartOf="@id/vGuideline10"
        tools:targetApi="m" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vGuideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vGuideline90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
